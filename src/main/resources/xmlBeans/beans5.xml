<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- АВТОСВЯЗЫВАНИЯ ПО ИМЕНИ -->
    <bean id="examBean" class="com.example.spring.demo.lesson2example4.Exam"
            autowire="byName">
        <property name="subject" value="Mathematics"/>
    </bean>

    <bean id="checker" class="com.example.spring.demo.lesson2example4.ExamChecker"/>

</beans>